@model List<CategoryViewModel>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Categories</h4>
                <a class="btn btn-primary" asp-controller="category" asp-action="create">
                    Add
                </a>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                        @TempData["Success"]
                        <button type="button" class="close" data-dismiss="alert">
                            <span>&times;</span>
                        </button>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model ?? [])
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(category.ImageName))
                                        {
                                            <img src="~/images/collections/@category.ImageName" alt="@category.Name" style="width: 50px; height: 50px; object-fit: cover; border-radius: 5px;">
                                        }
                                        else
                                        {
                                            <span class="text-muted">No Image</span>
                                        }
                                    </td>
                                    <td>@category.Name</td>
                                    <td>
                                        @if (category.IsDeleted)
                                        {
                                            <span class="badge badge-danger">Deleted</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-success">Active</span>
                                        }
                                    </td>
                                    <td>
                
                                        <a asp-action="details" asp-route-id="@category.Id"
                                           class="btn btn-info btn-sm" title="View Details"><i class="mdi mdi-eye"></i></a>
                                    <a class="btn btn-warning" asp-controller="category" asp-action="update" asp-route-id="@category.Id">Update</a>
                                    <a class="btn btn-danger" onclick="deleteCategory(@category.Id, this)">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function deleteCategory(id, element) {
        if (confirm('Are you sure you want to delete this category?')) {
            fetch(`/Admin/category/delete/${id}`, {
                method: "POST"
            })
            .then(response => response.json())
            .then(data => {
                if (data.isDeleted) {
                    element.closest("tr").remove();

                    const alertHtml = `<div class="alert alert-success alert-dismissible fade show mt-3">
                        ${data.message || 'Category deleted successfully!'}
                        <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
                    </div>`;
                    document.querySelector('.card-body').insertAdjacentHTML('afterbegin', alertHtml);
                } else {
                    alert('Failed to delete category');
                }
            })
            .catch(error => {
                console.log('Error:', error);
                alert('An error occurred');
            });
        }
    }
</script>