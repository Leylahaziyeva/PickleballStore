@model List<ProductViewModel>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Products</h4>
                <a class="btn btn-primary" asp-controller="product" asp-action="create">
                    Add
                </a>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                        @TempData["Success"]
                        <button type="button" class="close" data-dismiss="alert">
                            <span>&times;</span>
                        </button>
                    </div>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                        @TempData["Error"]
                        <button type="button" class="close" data-dismiss="alert">
                            <span>&times;</span>
                        </button>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th>Stock</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model ?? [])
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.CoverImageName))
                                        {
                                            <img src="~/images/products/@item.CoverImageName" alt="@item.Name" style="width: 100px; height: 100px; object-fit: cover; border-radius: 5px;" />
                                        }
                                        else
                                        {
                                            <span class="text-muted">No Image</span>
                                        }
                                    </td>
                                    <td>@item.Name</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.CategoryName))
                                        {
                                            <span class="badge badge-info">@item.CategoryName</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.PriceBeforeDiscount.HasValue)
                                        {
                                            <span class="text-muted" style="text-decoration: line-through; font-size: 12px;">$@item.PriceBeforeDiscount.Value.ToString("F2")</span>
                                            <br />
                                            <span class="text-success font-weight-bold">$@item.Price.ToString("F2")</span>
                                        }
                                        else
                                        {
                                            <span>$@item.Price.ToString("F2")</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.QuantityAvailable > 0)
                                        {
                                            <span class="badge badge-success">@item.QuantityAvailable</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">Out of Stock</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" 
                                        title="View Details"><i class="mdi mdi-eye"></i></a>
                                        <a class="btn btn-warning" asp-controller="product" asp-action="update" asp-route-id="@item.Id">Update</a>
                                        <a class="btn btn-danger" onclick="deleteProduct(@item.Id, this)">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function deleteProduct(id, element) {
        if (confirm('Are you sure you want to delete this product?')) {
            fetch(`/Admin/Product/delete/${id}`, {
                method: "POST"
            })
            .then(response => response.json())
            .then(data => {
                if (data.isDeleted) {
                    element.parentNode.parentNode.remove();

                    const alertHtml = `<div class="alert alert-success alert-dismissible fade show mt-3">
                        ${data.message || 'Product deleted successfully!'}
                        <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
                    </div>`;
                    document.querySelector('.card-body').insertAdjacentHTML('afterbegin', alertHtml);
                } else {
                    alert('Failed to delete product');
                }
            })
            .catch(error => {
                console.log('Error:', error);
                alert('An error occurred');
            });
        }
    }
</script>