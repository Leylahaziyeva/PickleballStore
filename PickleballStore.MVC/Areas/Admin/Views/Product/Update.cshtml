@model UpdateProductViewModel
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card shadow-sm rounded-3">
            <div class="card-body">
                <h4 class="card-title">Update product</h4>
                <form method="post" class="forms-sample" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CoverImageName" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Name">Product Name</label>
                                <input asp-for="Name" class="form-control" placeholder="name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="CategoryId">Category</label>
                                <select asp-items="Model.CategorySelectListItems" asp-for="CategoryId" class="form-control">
                                    <option value="">-- Select Category --</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Price">Price</label>
                                <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="price">
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Stock">Stock</label>
                                <input asp-for="Stock" type="number" class="form-control" placeholder="stock quantity">
                                <span asp-validation-for="Stock" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description">Description</label>
                        <textarea id="editor" asp-for="Description" rows="5" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="AdditionalInformation">Additional Information</label>
                        <textarea id="additionalEditor" asp-for="AdditionalInformation" rows="3" class="form-control"></textarea>
                        <span asp-validation-for="AdditionalInformation" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label for="CoverImageFile">Cover image</label>
                        <input asp-for="CoverImageFile" type="file" class="form-control" accept="image/*">
                        <span asp-validation-for="CoverImageFile" class="text-danger"></span>
                        <small class="form-text text-muted">Leave empty to keep current image</small>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.CoverImageName))
                    {
                        <div class="form-group mb-3">
                            <label>Current Cover Image</label>
                            <div>
                                <img src="~/images/products/@Model.CoverImageName" alt="@Model.Name"
                                     style="max-width: 200px; max-height: 200px; border-radius: 5px; border: 1px solid #ddd; object-fit: cover;" />
                            </div>
                        </div>
                    }

                    <div class="form-group mb-3">
                        <label for="ImageFiles">Additional Images</label>
                        <input asp-for="ImageFiles" type="file" class="form-control" accept="image/*" multiple>
                        <span asp-validation-for="ImageFiles" class="text-danger"></span>
                        <small class="form-text text-muted">Select new images to add (optional)</small>
                    </div>

                    @if (Model.ExistingImages != null && Model.ExistingImages.Any())
                    {
                        <div class="form-group mb-3">
                            <label>Current Additional Images</label>
                            <div style="display: flex; flex-wrap: wrap; gap: 10px;">
                                @foreach (var image in Model.ExistingImages)
                                {
                                    <div style="position: relative;">
                                        <img src="~/images/products/@image" alt="Product Image"
                                             style="width: 100px; height: 100px; object-fit: cover; border-radius: 5px; border: 1px solid #ddd;" />
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <!-- Product Variants Section -->
                    <div class="card border mt-4">
                        <div class="card-header bg-light">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">Product Variants (Colors, Sizes, etc.)</h5>
                                <button type="button" class="btn btn-sm btn-success" id="addVariantBtn">
                                    <i class="mdi mdi-plus"></i> Add Variant
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div id="variantsContainer">
                                @if (Model.Variants != null && Model.Variants.Any())
                                {
                                    @for (int i = 0; i < Model.Variants.Count; i++)
                                    {
                                        <div class="variant-row border-bottom pb-3 mb-3" data-index="@i">
                                            <input type="hidden" name="Variants[@i].Id" value="@Model.Variants[i].Id" />
                                            <input type="hidden" name="Variants[@i].ProductId" value="@Model.Id" />
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label>Option Name</label>
                                                        <input type="text" name="Variants[@i].OptionName" value="@Model.Variants[i].OptionName" class="form-control" required />
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label>Option Value</label>
                                                        <input type="text" name="Variants[@i].OptionValue" value="@Model.Variants[i].OptionValue" class="form-control" required />
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        <label>Color Code</label>
                                                        <input type="color" name="Variants[@i].ColorCode" value="@(Model.Variants[i].ColorCode ?? "#000000")" class="form-control" style="height: 45px;" />
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        <label>Variant Image (Optional)</label>
                                                        <input type="file" name="Variants[@i].ImageFile" class="form-control" accept="image/*" />

                                                    </div>
                                                </div>
                                                <div class="col-md-1">
                                                    <div class="form-group">
                                                        <label>&nbsp;</label>
                                                        <button type="button" class="btn btn-danger btn-block remove-variant-btn">
                                                            <i class="mdi mdi-delete"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary mr-2">Update</button>
                        <a asp-controller="product" asp-action="index" class="btn btn-light">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        let editorInstance = null;
        let additionalEditorInstance = null;
        let variantIndex = @(Model.Variants?.Count ?? 0);

        document.addEventListener('DOMContentLoaded', function() {
            if (document.querySelector('#editor')) {
                ClassicEditor
                    .create(document.querySelector('#editor'))
                    .then(editor => {
                        editorInstance = editor;
                        console.log('Description editor initialized');
                    })
                    .catch(error => console.error('Editor error:', error));
            }

            if (document.querySelector('#additionalEditor')) {
                ClassicEditor
                    .create(document.querySelector('#additionalEditor'))
                    .then(editor => {
                        additionalEditorInstance = editor;
                        console.log('Additional editor initialized');
                    })
                    .catch(error => console.error('Additional Editor error:', error));
            }

            document.querySelector('form').addEventListener('submit', function(e) {
                if (editorInstance) {
                    document.querySelector('#editor').value = editorInstance.getData();
                }
                if (additionalEditorInstance) {
                    document.querySelector('#additionalEditor').value = additionalEditorInstance.getData();
                }
            });

            document.querySelectorAll('.remove-variant-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    this.closest('.variant-row').remove();
                });
            });

            document.getElementById('addVariantBtn').addEventListener('click', function() {
                addVariantRow();
            });
        });

        function addVariantRow() {
            const container = document.getElementById('variantsContainer');
            const variantHtml = `
                <div class="variant-row border-bottom pb-3 mb-3" data-index="${variantIndex}">
                    <input type="hidden" name="Variants[${variantIndex}].Id" value="0" />
                    <input type="hidden" name="Variants[${variantIndex}].ProductId" value="@Model.Id" />
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Option Name (e.g., Color, Size)</label>
                                <input type="text" name="Variants[${variantIndex}].OptionName" class="form-control" placeholder="Color" required />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Option Value (e.g., Red, Large)</label>
                                <input type="text" name="Variants[${variantIndex}].OptionValue" class="form-control" placeholder="Red" required />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Color Code (Optional)</label>
                                <input type="color" name="Variants[${variantIndex}].ColorCode" class="form-control" style="height: 45px;" value="#000000" />
                            </div>  
                        </div>
                           <div class="col-md-3">
                               <div class="form-group">
                                 <label>Variant Image (Optional)</label>
                                  <input type="file" name="Variants[${variantIndex}].ImageFile" class="form-control" accept="image/*" />
                                </div>
                             </div>
                        <div class="col-md-1">
                            <div class="form-group">
                                <label>&nbsp;</label>
                                <button type="button" class="btn btn-danger btn-block remove-variant-btn">
                                    <i class="mdi mdi-delete"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            `;

            container.insertAdjacentHTML('beforeend', variantHtml);
            variantIndex++;

            const lastRow = container.lastElementChild;
            lastRow.querySelector('.remove-variant-btn').addEventListener('click', function() {
                lastRow.remove();
            });
        }
    </script>
}