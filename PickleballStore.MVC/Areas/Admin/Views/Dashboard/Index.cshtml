@model DashboardViewModel

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="d-flex justify-content-between flex-wrap">
            <div class="d-flex align-items-end flex-wrap">
                <div class="mr-md-3 mr-xl-5">
                    <h2>Welcome</h2>
                    <p class="mb-md-0">Your Dashboard</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-3 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <p class="card-title text-muted mb-2">Total Revenue</p>
                        <h3 class="font-weight-bold mb-0">$@Model.TotalRevenue.ToString("N2")</h3>
                        <small class="text-success">
                            <i class="mdi mdi-arrow-up"></i> This Month: $@Model.ThisMonthRevenue.ToString("N2")
                        </small>
                    </div>
                    <div>
                        <i class="mdi mdi-currency-usd icon-lg text-success"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <p class="card-title text-muted mb-2">Total Orders</p>
                        <h3 class="font-weight-bold mb-0">@Model.TotalOrders</h3>
                        <small class="text-info">
                            <i class="mdi mdi-clock-outline"></i> Pending: @Model.PendingOrders
                        </small>
                    </div>
                    <div>
                        <i class="mdi mdi-cart icon-lg text-primary"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <p class="card-title text-muted mb-2">Total Customers</p>
                        <h3 class="font-weight-bold mb-0">@Model.TotalCustomers</h3>
                        <small class="text-success">
                            <i class="mdi mdi-account-plus"></i> New: @Model.NewCustomersThisMonth
                        </small>
                    </div>
                    <div>
                        <i class="mdi mdi-account-multiple icon-lg text-info"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <p class="card-title text-muted mb-2">Products</p>
                        <h3 class="font-weight-bold mb-0">@Model.TotalProducts</h3>
                        <small class="text-danger">
                            <i class="mdi mdi-alert"></i> Low Stock: @Model.LowStockProducts
                        </small>
                    </div>
                    <div>
                        <i class="mdi mdi-package-variant icon-lg text-warning"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Order Status Overview</h4>
                <div class="d-flex flex-wrap justify-content-between mt-4">
                    <div class="text-center px-3">
                        <i class="mdi mdi-clock-outline icon-lg text-warning"></i>
                        <h4 class="mt-2">@Model.PendingOrders</h4>
                        <small class="text-muted">On Hold</small>
                    </div>
                    <div class="text-center px-3">
                        <i class="mdi mdi-cog icon-lg text-info"></i>
                        <h4 class="mt-2">@Model.ProcessingOrders</h4>
                        <small class="text-muted">Processing</small>
                    </div>
                    <div class="text-center px-3">
                        <i class="mdi mdi-truck icon-lg text-success"></i>
                        <h4 class="mt-2">@Model.ShippedOrders</h4>
                        <small class="text-muted">Shipped</small>
                    </div>
                    <div class="text-center px-3">
                        <i class="mdi mdi-check-circle icon-lg text-primary"></i>
                        <h4 class="mt-2">@Model.CompletedOrders</h4>
                        <small class="text-muted">Completed</small>
                    </div>
                    <div class="text-center px-3">
                        <i class="mdi mdi-close-circle icon-lg text-danger"></i>
                        <h4 class="mt-2">@Model.CancelledOrders</h4>
                        <small class="text-muted">Cancelled</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-7 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Monthly Revenue</h4>
                <canvas id="monthlyRevenueChart"></canvas>
            </div>
        </div>
    </div>
    <div class="col-md-5 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Order Distribution</h4>
                <canvas id="orderStatusChart"></canvas>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Top Selling Products</h4>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Sold</th>
                                <th>Revenue</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.TopSellingProducts)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                                            {
                                                <img src="~/images/products/@product.ImageUrl" alt="@product.ProductName"
                                                     style="width: 40px; height: 40px; object-fit: cover; border-radius: 5px; margin-right: 10px;" />
                                            }
                                            <span>@product.ProductName</span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge badge-success">@product.TotalQuantitySold</span>
                                    </td>
                                    <td>
                                        <strong class="text-primary">$@product.TotalRevenue.ToString("N2")</strong>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="card-title mb-0">Recent Orders</h4>
                    <a asp-controller="Orders" asp-action="Index" class="btn btn-sm btn-primary">View All</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Order #</th>
                                <th>Customer</th>
                                <th>Amount</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.RecentOrders)
                            {
                                <tr>
                                    <td>
                                        <a asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id">
                                            @order.OrderNumber
                                        </a>
                                    </td>
                                    <td>
                                        <div>@order.CustomerName</div>
                                        <small class="text-muted">@order.OrderDate.ToString("dd MMM")</small>
                                    </td>
                                    <td>$@order.TotalAmount.ToString("N2")</td>
                                    <td>
                                        @switch (order.Status)
                                        {
                                            case "OnHold":
                                                <span class="badge badge-warning">On Hold</span>
                                                break;
                                            case "Processing":
                                                <span class="badge badge-info">Processing</span>
                                                break;
                                            case "Shipped":
                                                <span class="badge badge-success">Shipped</span>
                                                break;
                                            case "Completed":
                                                <span class="badge badge-dark">Completed</span>
                                                break;
                                            case "Cancelled":
                                                <span class="badge badge-danger">Cancelled</span>
                                                break;
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        // Monthly Revenue Chart
        var monthlyRevenueCtx = document.getElementById('monthlyRevenueChart').getContext('2d');
        var monthlyRevenueChart = new Chart(monthlyRevenueCtx, {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.MonthlyRevenue.Select(m => m.Month))),
                datasets: [{
                    label: 'Revenue ($)',
                    data: @Html.Raw(Json.Serialize(Model.MonthlyRevenue.Select(m => m.Revenue))),
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 2,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Order Status Chart
        var orderStatusCtx = document.getElementById('orderStatusChart').getContext('2d');
        var orderStatusChart = new Chart(orderStatusCtx, {
            type: 'doughnut',
            data: {
                labels: ['On Hold', 'Processing', 'Shipped', 'Completed', 'Cancelled'],
                datasets: [{
                    data: [
                        @Model.PendingOrders,
                        @Model.ProcessingOrders,
                        @Model.ShippedOrders,
                        @Model.CompletedOrders,
                        @Model.CancelledOrders
                    ],
                    backgroundColor: [
                        'rgba(255, 193, 7, 0.8)',   //  On Hold
                        'rgba(23, 162, 184, 0.8)',  //  Processing
                        'rgba(40, 167, 69, 0.8)',   //  Shipped
                        'rgba(52, 58, 64, 0.8)',    //  Completed
                        'rgba(220, 53, 69, 0.8)'    //  Cancelled
                    ],
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        display: true,
                        position: 'bottom'
                    }
                }
            }
        });
    </script>
}