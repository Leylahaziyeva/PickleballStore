<!-- page-cart -->
<section class="flat-spacing-11">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <partial name="_MenuAccountPartial"></partial>
            </div>
            <div class="col-lg-9">
                <div class="my-account-content account-dashboard">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div class="mb_60">
                        <h5 class="fw-5 mb_20">Hello @Model.Username</h5>
                        <p>
                            From your account dashboard you can view your <a class="text_primary" asp-action="Orders" asp-controller="Account">recent orders</a>, manage your <a class="text_primary" asp-action="Addresses" asp-controller="Account">
                                shipping and billing
                                address
                            </a>, and <a class="text_primary" asp-action="AccountDetails" asp-controller="Account">
                                edit your
                                password and account details
                            </a>.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
