@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="tf-page-title">
    <div class="container-full">
        <div class="heading text-center">Create Account</div>
    </div>
</div>

<section class="flat-spacing-11">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="tf-login-form">
                    <form asp-action="Register" asp-controller="Account" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="tf-field style-1 mb_15">
                            <input asp-for="FirstName" class="tf-field-input tf-input" placeholder=" " type="text">
                            <label asp-for="FirstName" class="tf-field-label">First name *</label>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="tf-field style-1 mb_15">
                            <input asp-for="LastName" class="tf-field-input tf-input" placeholder=" " type="text">
                            <label asp-for="LastName" class="tf-field-label">Last name *</label>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="tf-field style-1 mb_15">
                            <input asp-for="Username" class="tf-field-input tf-input" placeholder=" " type="text">
                            <label asp-for="Username" class="tf-field-label">Username *</label>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="tf-field style-1 mb_15">
                            <input asp-for="Email" class="tf-field-input tf-input" placeholder=" " type="email">
                            <label asp-for="Email" class="tf-field-label">Email *</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="tf-field style-1 mb_30">
                            <input asp-for="Password" class="tf-field-input tf-input" placeholder=" " type="password">
                            <label asp-for="Password" class="tf-field-label">Password *</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Checkbox with proper hidden input for unchecked values -->
                        <div class="mb_20">
                            <div class="form-check">
                                <input asp-for="AgreeToTerms" class="form-check-input" type="checkbox" />
                                <label asp-for="AgreeToTerms" class="form-check-label">I agree to terms and conditions *</label>
                                <span asp-validation-for="AgreeToTerms" class="text-danger d-block"></span>
                            </div>

                        </div>

                        <div class="mb_20">
                            <button type="submit" class="tf-btn btn-fill animate-hover-btn radius-3 w-100 justify-content-center">
                                <span>Register</span>
                            </button>
                        </div>

                        <div class="text-center">
                            <span>Already have an account? </span>
                            <a asp-action="Login" class="btn-link fw-6 link">Log in here</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
