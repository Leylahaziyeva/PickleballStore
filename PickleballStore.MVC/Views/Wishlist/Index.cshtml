<div class="tf-page-title">
    <div class="container-full">
        <div class="heading text-center">Your wishlist</div>
    </div>
</div>

<section class="flat-spacing-2">
    <div class="container">
        @if (Model.Any())
        {
            <div class="grid-layout wrapper-shop" data-grid="grid-4">
                @foreach (var item in Model)
                {
                    <div class="card-product">
                        <div class="card-product-wrapper">
                            <a href="@Url.Action("Details", "Product", new { id = item.Product!.Id })" class="product-img">
                                @{
                                    var mainImage = item.Product.Images.FirstOrDefault(x => x.IsMain);
                                    var hoverImage = item.Product.Images.FirstOrDefault(x => x.IsHover);
                                }
                                @if (mainImage != null)
                                {
                                    <img class="lazyload img-product"
                                         data-src="/images/products/@mainImage.ImageName"
                                         src="~/images/products/@mainImage.ImageName"
                                         alt="@item.Product.Name">
                                }
                                @if (hoverImage != null)
                                {
                                    <img class="lazyload img-hover"
                                         data-src="/images/products/@hoverImage.ImageName"
                                         src="~/images/products/@hoverImage.ImageName"
                                         alt="@item.Product.Name">
                                }
                            </a>

                            <div class="list-product-btn">
                                <a href="#quick_add_@item.Product.Id" data-bs-toggle="modal"
                                   class="box-icon bg_white quick-add tf-btn-loading">
                                    <span class="icon icon-bag"></span>
                                    <span class="tooltip">Quick Add</span>
                                </a>
                                <a href="#quick_view_@item.Product.Id" data-bs-toggle="modal"
                                   class="box-icon bg_white quickview tf-btn-loading">
                                    <span class="icon icon-view"></span>
                                    <span class="tooltip">Quick View</span>
                                </a>
                            </div>

                            @if (!string.IsNullOrEmpty(item.Product.BadgeLabel))
                            {
                                <div class="on-sale-wrap">
                                    <div class="on-sale-item @item.Product.BadgeCssClass">@item.Product.BadgeLabel</div>
                                </div>
                            }
                        </div>

                        <div class="card-product-info">
                            <a href="@Url.Action("Details", "Product", new { id = item.Product.Id })"
                               class="title link">@item.Product.Name</a>
                            <span class="price">
                                @if (item.Product.PriceBeforeDiscount.HasValue && item.Product.PriceBeforeDiscount.Value > item.Product.Price)
                                {
                                    <span style="text-decoration: line-through; color: gray;">
                                        $@item.Product.PriceBeforeDiscount.Value.ToString("F2")
                                    </span>
                                    <span style="color: red; font-weight: bold;">
                                        $@item.Product.Price.ToString("F2")
                                    </span>
                                }
                                else
                                {
                                    <span>$@item.Product.Price.ToString("F2")</span>
                                }
                            </span>

                            @if (item.Product.Variants.Any())
                            {
                                <ul class="list-color-product">
                                    @foreach (var variant in item.Product.Variants.Take(3))
                                    {
                                        <li class="list-color-item color-swatch">
                                            <span class="tooltip">@variant.OptionValue</span>
                                            <span class="swatch-value" style="background-color:@variant.ColorCode"></span>
                                        </li>
                                    }
                                </ul>
                            }
                        </div>
                    </div>

                    @await Html.PartialAsync("~/Views/Shared/_ProductQuickAddModalPartial.cshtml", item.Product)
                    @await Html.PartialAsync("~/Views/Shared/_ProductQuickViewModalPartial.cshtml", item.Product)

                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <h4>Your wishlist is empty</h4>
                <p>Add items to your wishlist to see them here</p>
                <a href="@Url.Action("Index", "Product")" class="tf-btn btn-fill">Continue Shopping</a>
            </div>
        }
    </div>
</section>